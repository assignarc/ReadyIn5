<form id="detailsForm" novalidate="novalidate" action="#">
    <p class="details-form-field">
        <label for="custfirstname" >First Name:</label>
        <input id="custfirstname" name="custfirstname" type="text" required="required" autocomplete="off" class="valid"></input>
    </p>
    <p class="details-form-field">
        <label for="custlastname">Last Name:</label>
        <input id="custlastname" name="custlastname" required="required" type="text"></input>
    </p>
    <p class="details-form-field">
        <label for="custphone">Phone:</label>
        <input id="custphone" name="custphone" required="required" readonly autocomplete="off" class="wlReadonly valid"></input>
    </p>
    <p class="details-form-field">
        <label for="toggle">Contact Method:</label>
        <span class="toggle" name="toggle">
            <input type="radio" name="custMethod" value="whatsapp" id="methodWA" />
            <label for="methodWA" title="WhatsApp"><img class="material-symbols-outlined" src="/images/whatsapp.png"></label>
            <input type="radio" name="custMethod" value="sms" id="methodSMS"/>
            <label for="methodSMS" title="SMS/Text"><span class="material-symbols-outlined">sms</span></label>
        </span>
    </p>
    
    <p class="details-form-field">
        <button type="submit" id="save">
            <span class="material-symbols-outlined">save</span>&nbsp;Save
        </button>
    </p>
</form> 
<script type="text/javascript" src="/js/customer/profileform.js">
   

</script>