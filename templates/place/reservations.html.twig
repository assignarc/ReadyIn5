                <div id="jsGridServe" 
                        wlBaseUrl="/svc/place/{wlPlaceSlug}/reservations/current/" 
                        wlFromStatus="SERVE" wlToStatus="NOSHOW" wlWidth="96%" wlPageSize="10"></div>
            </div>
            <div id="tabs-5">
                <div id="jsGridNoShow" 
                        wlBaseUrl="/svc/place/{wlPlaceSlug}/reservations/current/" 
                        wlFromStatus="NOSHOW" wlWidth="96%" wlPageSize="10"></div>
            </div>
        </div>
    

    <script>
        $("#tabs").tabs();
